<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layou"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.FragmentWeeks">

    <LinearLayout
        android:id="@+id/LinearLayoutDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDayOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="א"
            android:textSize="14sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonDayTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ב"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDayThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ג"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDayFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ד"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDayFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ה"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDaySix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ו"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDaySeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:text="ז"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewDays"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_weight="0.5">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCreateOrWeekBefore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:text="Create First Week" />

        <LinearLayout
            android:id="@+id/LinearLayoutParamsInWeeks"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextNumverOfDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="number of day"
                android:inputType="text"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/editTextTextNumverOfMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="number of month"
                android:inputType="text"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/editTextTextNumverOfYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="number of year"
                android:inputType="text"
                android:textSize="22dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonNextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="0"
            android:text="Next week" />
    </LinearLayout>

</LinearLayout>